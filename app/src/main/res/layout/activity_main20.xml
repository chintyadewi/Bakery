<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/sus"
                    style="@style/imgSubmenu"
                    android:src="@drawable/sus"/>

                <TextView
                    android:id="@+id/text1"
                    style="@style/text1Submenu"
                    android:text="Sus Kering"
                    android:layout_toRightOf="@id/sus"/>

                <TextView
                    style="@style/text2Submenu"
                    android:text="Pilihan Tidak Tersedia"
                    android:layout_below="@id/text1"
                    android:layout_toRightOf="@id/sus"
                    android:id="@+id/sus_text2"/>

                <TextView
                    android:id="@+id/sus_price"
                    style="@style/price"
                    android:text="Rp16.500/ons"
                    android:layout_below="@id/sus_text2"
                    android:layout_toRightOf="@id/sus"/>

            </RelativeLayout>

            <View android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#bbb"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp">

                <TableRow>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/user"
                        android:layout_weight="0.5"
                        android:layout_marginTop="10dp"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:hint="Nama"
                        android:textColor="@android:color/black"
                        android:padding="8dp"
                        android:textSize="15sp"
                        android:id="@+id/nama_pemesan"
                        android:layout_marginTop="10dp"/>

                </TableRow>

                <TableRow>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/adress"
                        android:layout_weight="0.5"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:hint="Alamat"
                        android:textColor="@android:color/black"
                        android:padding="8dp"
                        android:textSize="15sp"
                        android:id="@+id/alamat"/>

                </TableRow>

                <TableRow>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/phone"
                        android:layout_weight="0.5"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:hint="No. Hp"
                        android:inputType="number"
                        android:textColor="@android:color/black"
                        android:padding="8dp"
                        android:textSize="15sp"
                        android:id="@+id/hp"/>
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">

                <Button
                    android:id="@+id/btn_decrement"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/jumlah_text_view"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:textColor="@android:color/black"/>

                <Button
                    android:id="@+id/btn_increment"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:textSize="15sp"/>

                <Button
                    android:id="@+id/bt_datepicker"
                    android:text="Tanggal Ambil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:text=""
                    android:id="@+id/tv_dateresult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Tambahan"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="15sp"
                android:id="@+id/detail_tambahan"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="90dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    android:background="#ffb31a"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/reset"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Simpan"
                    android:background="#ffb31a"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/simpan"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="centerCrop"
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/back"
        android:background="@android:drawable/arrow_up_float"
        android:id="@+id/back"/>
</RelativeLayout>
