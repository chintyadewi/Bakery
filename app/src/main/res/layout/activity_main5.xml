<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/bikang"
                    style="@style/imgSubmenu"
                    android:src="@drawable/bikang"/>

                <TextView
                    android:id="@+id/bikang_text1"
                    style="@style/text1Submenu"
                    android:text="Bikang"
                    android:layout_toRightOf="@id/bikang"/>

                <TextView
                    style="@style/text2Submenu"
                    android:text="Pilihan Tidak Tersedia"
                    android:layout_below="@id/bikang_text1"
                    android:layout_toRightOf="@id/bikang"
                    android:id="@+id/bikang_text2"/>

                <TextView
                    android:id="@+id/bikang_price"
                    style="@style/price"
                    android:text="Rp1.500"
                    android:layout_below="@id/bikang_text2"
                    android:layout_toRightOf="@id/bikang"/>

                <ImageButton
                    android:id="@+id/bikangOrder"
                    style="@style/btnSubmenu"/>

            </RelativeLayout>

            <View android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#bbb"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/onde"
                    style="@style/imgSubmenu"
                    android:src="@drawable/onde"/>

                <TextView
                    android:id="@+id/onde_text1"
                    style="@style/text1Submenu"
                    android:text="Onde Onde"
                    android:layout_toRightOf="@id/onde"/>

                <TextView
                    style="@style/text2Submenu"
                    android:text="Pilihan Tersedia"
                    android:layout_below="@id/onde_text1"
                    android:layout_toRightOf="@id/onde"
                    android:id="@+id/onde_text2"/>

                <TextView
                    android:id="@+id/onde_price"
                    style="@style/price"
                    android:text="Rp1.500 / pcs"
                    android:layout_below="@id/onde_text2"
                    android:layout_toRightOf="@id/onde"/>

                <ImageButton
                    android:id="@+id/ondeOrder"
                    style="@style/btnSubmenu"/>

            </RelativeLayout>

            <View android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#bbb"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/lapis"
                    style="@style/imgSubmenu"
                    android:src="@drawable/lapis"/>

                <TextView
                    android:id="@+id/lapis_text1"
                    style="@style/text1Submenu"
                    android:text="Lapis"
                    android:layout_toRightOf="@id/lapis"/>

                <TextView
                    style="@style/text2Submenu"
                    android:text="Pilihan Tidak Tersedia"
                    android:layout_below="@id/lapis_text1"
                    android:layout_toRightOf="@id/lapis"
                    android:id="@+id/lapis_text2"/>

                <TextView
                    android:id="@+id/lapis_price"
                    style="@style/price"
                    android:text="Rp1.500"
                    android:layout_below="@id/lapis_text2"
                    android:layout_toRightOf="@id/lapis"/>

                <ImageButton
                    android:id="@+id/lapisOrder"
                    style="@style/btnSubmenu"/>

            </RelativeLayout>

            <View android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#bbb"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/dadar"
                    style="@style/imgSubmenu"
                    android:src="@drawable/dadar"/>

                <TextView
                    android:id="@+id/dadar_text1"
                    style="@style/text1Submenu"
                    android:text="Dadar Gulung"
                    android:layout_toRightOf="@id/dadar"/>

                <TextView
                    style="@style/text2Submenu"
                    android:text="Pilihan Tidak Tersedia"
                    android:layout_below="@id/dadar_text1"
                    android:layout_toRightOf="@id/dadar"
                    android:id="@+id/dadar_text2"/>

                <TextView
                    android:id="@+id/dadar_price"
                    style="@style/price"
                    android:text="Rp1.000"
                    android:layout_below="@id/dadar_text2"
                    android:layout_toRightOf="@id/dadar"/>

                <ImageButton
                    android:id="@+id/dadarOrder"
                    style="@style/btnSubmenu"/>

            </RelativeLayout>

            <View android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#bbb"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/lemper"
                    style="@style/imgSubmenu"
                    android:src="@drawable/lemper"/>

                <TextView
                    android:id="@+id/lemper_text1"
                    style="@style/text1Submenu"
                    android:text="Lemper"
                    android:layout_toRightOf="@id/lemper"/>

                <TextView
                    style="@style/text2Submenu"
                    android:text="Pilihan Tersedia"
                    android:layout_below="@id/lemper_text1"
                    android:layout_toRightOf="@id/lemper"
                    android:id="@+id/lemper_text2"/>

                <TextView
                    android:id="@+id/lemper_price"
                    style="@style/price"
                    android:text="Rp2.000"
                    android:layout_below="@id/lemper_text2"
                    android:layout_toRightOf="@id/lemper"/>

                <ImageButton
                    android:id="@+id/lemperOrder"
                    style="@style/btnSubmenu"/>

            </RelativeLayout>

            <View android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#bbb"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/putu"
                    style="@style/imgSubmenu"
                    android:src="@drawable/putu"/>

                <TextView
                    android:id="@+id/putu_text1"
                    style="@style/text1Submenu"
                    android:text="Putu Ayu"
                    android:layout_toRightOf="@id/putu"/>

                <TextView
                    style="@style/text2Submenu"
                    android:text="Pilihan Tidak Tersedia"
                    android:layout_below="@id/putu_text1"
                    android:layout_toRightOf="@id/putu"
                    android:id="@+id/putu_text2"/>

                <TextView
                    android:id="@+id/putu_price"
                    style="@style/price"
                    android:text="Rp1.500"
                    android:layout_below="@id/putu_text2"
                    android:layout_toRightOf="@id/putu"/>

                <ImageButton
                    android:id="@+id/putuOrder"
                    style="@style/btnSubmenu"/>

            </RelativeLayout>

            <View android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#bbb"/>

        </LinearLayout>

    </ScrollView>

    <ImageButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="centerCrop"
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/back"
        android:background="@android:drawable/arrow_up_float"
        android:id="@+id/back"/>
</RelativeLayout>


